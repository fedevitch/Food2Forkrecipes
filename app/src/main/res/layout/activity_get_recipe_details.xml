<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:minHeight="180dp"
        android:minWidth="180dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/textViewTitle"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBarDetailed"
        style="@android:style/Widget.DeviceDefault.RatingBar.Small"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:numStars="10"
        android:stepSize="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/textViewTitle"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="details"
        android:id="@+id/textDetails"
        android:layout_below="@+id/ratingBarDetailed"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_above="@+id/viewImage"
        android:layout_alignParentEnd="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:elegantTextHeight="false"
        android:nestedScrollingEnabled="true"
        android:textIsSelectable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="View image"
        android:id="@+id/viewImage"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textDetails"
        android:layout_marginBottom="21dp"
        android:textSize="10dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="This recipe on food2fork.com"
        android:id="@+id/viewOnf2f"
        android:textSize="10dp"
        android:layout_below="@+id/textDetails"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Source"
        android:id="@+id/viewSource"
        android:textSize="10dp"
        android:layout_below="@+id/textDetails"
        android:layout_toEndOf="@+id/ratingBarDetailed"
        android:clickable="true" />

</RelativeLayout>