<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".GetRecipes"
    android:id="@+id/ParentContainer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchField"
        android:scrollbarStyle="outsideInset"
        android:addStatesFromChildren="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/scrollView"
        android:measureAllChildren="true"
        android:layout_alignParentStart="true"
        android:foregroundGravity="fill_horizontal|top"
        android:visibility="visible"
        android:importantForAccessibility="yes"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:fillViewport="true"
        android:textAlignment="viewStart"
        android:layout_above="@+id/prev"
        android:layout_alignParentTop="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container"
            android:measureWithLargestChild="false"
            android:textAlignment="gravity"
            android:baselineAligned="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="fill_horizontal|left"
            android:divider="@drawable/abc_list_divider_mtrl_alpha">

        </LinearLayout>
    </ScrollView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchField"
        android:inputType="text|textCapWords|textAutoComplete"
        android:editable="true"
        android:gravity="top"
        android:minWidth="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/SearchButton"
        android:enabled="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchButtonText"
        android:id="@+id/SearchButton"
        android:gravity="top"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/next"
        android:layout_above="@+id/scrollView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/captionTop"
        android:id="@+id/ChangeSort"
        android:textSize="@dimen/abc_text_size_small_material"
        android:enabled="true"
        android:layout_below="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:alpha="1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        android:id="@+id/prev"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:id="@+id/next"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
